<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Shadow layer -->
    <item android:bottom="8dp" android:right="8dp">
        <shape android:shape="rectangle">
            <solid android:color="#D3D3D3" /> <!-- Shadow color -->
            <corners android:radius="2dp" />
        </shape>
    </item>

    <!-- Main button layer -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF" /> <!-- White background -->
            <corners android:radius="2dp" />
            <stroke android:width="2dp" android:color="#E0E0E0" /> <!-- Border color -->
        </shape>
    </item>
</layer-list>
