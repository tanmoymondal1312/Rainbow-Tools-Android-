<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Pressed state -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="#d1d1d1" />
            <corners android:radius="12dp" />
            <padding android:left="5dp" android:top="5dp" android:right="5dp" android:bottom="3dp" />
            <stroke android:width="2dp" android:color="#7B6D93" />
        </shape>
    </item>


    <item>
        <shape android:shape="rectangle">
            <gradient android:angle="90"
                android:startColor="#BEE1C0"
                android:endColor="#3E423A"
                />
            <corners android:radius="12dp" />
            <padding android:left="5dp" android:top="3dp" android:right="5dp" android:bottom="5dp" />
            <stroke android:width="2dp" android:color="#20ABEA" />
        </shape>
    </item>
</selector>

