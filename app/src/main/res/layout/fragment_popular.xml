<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".Fragments.FragmentPopular">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- Wrapping TextViews in a LinearLayout -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="@dimen/_300sdp"
                android:layout_height="400dp"
                android:text="Define User Favourite items"
                android:gravity="center"
                android:layout_gravity="center"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:longClickable="true" />

            <TextView
                android:layout_width="@dimen/_300sdp"
                android:layout_height="400dp"
                android:text="Define User SECONF Favourite items"
                android:gravity="center"
                android:layout_gravity="center"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:longClickable="true" />

            <TextView
                android:layout_width="@dimen/_300sdp"
                android:layout_height="400dp"
                android:text="Define User tHIRD Favourite items"
                android:gravity="center"
                android:layout_gravity="center"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:longClickable="true" />

        </LinearLayout>
    </ScrollView>
</LinearLayout>

