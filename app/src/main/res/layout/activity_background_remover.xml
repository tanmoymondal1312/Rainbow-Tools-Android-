<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:aandroid="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".Activities.BackgroundRemoverActivity"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <include
            android:id="@+id/layout_toolbar_included"
            layout="@layout/toolbar_bg_remover"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:background="@drawable/layout_bg_1">

                <FrameLayout
                    android:id="@+id/frame_of_bg_bgr"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/background_114">
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:src="@drawable/lay_bg_114"
                        android:scaleType="fitXY"
                        android:layout_gravity="bottom" />
                </FrameLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="center">


                    <!--applyMovingRainbowGradient in ButtonAnimationManager-->
                    <TextView
                        android:id="@+id/txt_view_1_in_bg_remover_bdy_layout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="No Editing Skills Needed â€“ Just Tap &amp; Remove!"
                        android:textSize="24sp"
                        android:textStyle="normal"
                        android:fontFamily="@font/playfairdisplay_italic"
                        android:letterSpacing="0.05"
                        android:padding="10dp"
                        android:textAlignment="center"
                        android:gravity="center"
                        android:shadowColor="#80000000"
                        android:shadowDx="2"
                        android:shadowDy="2"
                        android:shadowRadius="5"
                        android:textColor="@android:color/black"
                        android:layout_gravity="center" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:background="@drawable/text_bg_1">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="horizontal"
                            android:gravity="center|bottom">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="You Are Using Python  "
                                android:textSize="20sp"
                                android:textStyle="bold"
                                android:fontFamily="sans-serif-condensed"
                                android:letterSpacing="0.02"
                                android:textAlignment="center"
                                android:shadowColor="#80000000"
                                android:shadowDx="2"
                                android:shadowDy="2"
                                android:shadowRadius="5"
                                android:textColor="#4C5EC3"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="rembg"
                                android:textSize="24sp"
                                android:textStyle="bold"
                                android:fontFamily="fantasy"                                android:letterSpacing="0.02"
                                android:textAlignment="center"
                                android:gravity="center|bottom"
                                android:shadowColor="#80000000"
                                android:shadowDx="2"
                                android:shadowDy="2"
                                android:shadowRadius="5"
                                android:textColor="#FFC107" />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="vertical">
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:text="ðŸ˜‰"
                                android:layout_gravity="center"
                                android:gravity="center|top"
                                android:textColor="#000000"
                                android:textSize="40sp"/>
                        </LinearLayout>
                    </LinearLayout>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="3">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:orientation="horizontal"
                            android:gravity="center">

                            <androidx.appcompat.widget.AppCompatImageButton
                                android:id="@+id/select_img_btn_in_bdy_enhance_img_layout"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/select_img_icn"
                                android:scaleType="fitCenter"
                                android:adjustViewBounds="true"
                                android:padding="0dp"
                                android:background="@drawable/ripple_effect"
                                android:clickable="true"
                                android:focusable="true"
                                android:contentDescription="Select Image"
                                android:foreground="?attr/selectableItemBackground"/>



                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="0.5"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:gravity="top">

                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:src="@drawable/bg_remover_l_1"
                                    android:adjustViewBounds="true"
                                    android:scaleType="fitCenter"
                                    android:layout_margin="@dimen/_10sdp"/>
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:gravity="top">

                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:src="@drawable/bg_remover_l_3"
                                    android:adjustViewBounds="true"
                                    android:scaleType="fitCenter"
                                android:layout_margin="@dimen/_10sdp"/>
                            </LinearLayout>
                        </LinearLayout>


                    </LinearLayout>
                </RelativeLayout>

            </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_left_for_bg_removed_images_bg_remover_activity"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_right_for_selected_image_bg_remover_activity"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"/>
            </LinearLayout>

            <include
                android:id="@+id/lottie_generating_in_bgr_l"
                layout="@layout/lottie_overlay_generating"
                android:layout_width="@dimen/_200sdp"
                android:layout_height="@dimen/_200sdp"
                android:layout_gravity="center">
            </include>
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_cancel_processing_rbg_l"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:text="Cancel"
                android:background="@drawable/btn_shape_cancel"
                android:layout_gravity="center|bottom"
                android:layout_marginBottom="@dimen/_40sdp"/>



        </FrameLayout>

    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <include
            android:id="@+id/layout_toolbar_bottom_included"
            layout="@layout/toolbar_botom_bg_remover_activity" />
    </RelativeLayout>

</LinearLayout>
